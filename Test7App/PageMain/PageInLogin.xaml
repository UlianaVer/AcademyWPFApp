<Page x:Class="Test7App.PageMain.PageInLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test7App.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="297" d:DesignWidth="800"
      Title="Форма авторизации">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock 
                    Text="Введите логин:"/>
            <TextBox Width="250"
                     Name="TxbLogin"
                     Text="1"/>
            <TextBlock 
                    Text="Введите пароль:"/>
            <TextBox Width="250"
                     Name="TxbPassword"
                     Text="1"/>
            <PasswordBox Width="250"
                         Name="PsbPassword"
                         FontSize="17pt"/>
            <Button Content="Войти"
                    Name="BtnLoginSystem"
                    Click="BtnLoginSystem_Click"/>

            <Button Content="Регистрация"
                    Margin="5,0,5,5"
                    Name="BtnReg"
                    Click="BtnReg_Click" />
        </StackPanel>
    </Grid>
</Page>
